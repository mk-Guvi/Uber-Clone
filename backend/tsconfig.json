{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,  // Add this line
    "skipLibCheck": true       // Optional: speeds up compilation by skipping type checking of declaration files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}